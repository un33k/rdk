{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true
  },
  "types": ["node"],
  "include": ["src/typings.d.ts", "src/index.ts"],
  "exclude": ["node_modules", "src/**/*.test.tsx"]
}